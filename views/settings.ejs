        <script>
            const addSubject = () => {
                const submitButton = document.getElementById("submit-button");
                const subjectList = document.getElementById("subjects-list");
                const subject = document.getElementById("subjects-input").value;
                const subjectsNodeList = document.getElementsByTagName("li");
                const subjectsArray = document.getElementById("subjectsarray");
                if (subject) {
                    submitButton.disabled = false;
                    document.getElementById("error").textContent = "";
                    subjectList.innerHTML += "<span id=" + subject + " class='badge badge-default'>" + subject + "<a onclick=" + "removeSubject('" + subject + "')" + " style = 'color:#FF0000; padding-left:10px; cursor:pointer;' class='remove-subject' > X</a ></span>"
                    subjectsArray.value +=  '|' + subject 
                } else {
                    document.getElementById("error").textContent = "Subjects cannot be blank.";
                };

            };

            const removeSubject = (subjectId) => {
                const parentElement = document.getElementById("subjects-list");
                const subjectToRemove = document.getElementById(subjectId);
                parentElement.removeChild(subjectToRemove);

                const subjectsArrayDOM = document.getElementById("subjectsarray");
                const subjectsArray = subjectsArrayDOM.value.split("|");
                subjectsArray.pop();
                const newSubjectsArray = subjectsArray.filter(subject => {
                    return subject !== subjectId;
                });

                subjectsArrayValue = ''
                newSubjectsArray.map(element => {
                    subjectsArrayValue += "|" + element 
                });

                subjectsArrayDOM.value = subjectsArrayValue;

                console.log(newSubjectsArray)

            }

